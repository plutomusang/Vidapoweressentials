                <ul id="company-details">
                    <li>Vida Power Essentials</li>
                    <li>Door 4 LDL Building Lacson st. Cor. Cervantes St. Bo.Obrero St., Davao City</li>
                    <li>Tel no: 082-227-9314</li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    @Html.Partial("_NavMenu")

    @RenderBody()
    <footer class="footer">
        <hr>
        <div class="container">
            <div>&copy; Copyright 2017</div>
        </div>
    </footer>

    <script src="~/js/common.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
